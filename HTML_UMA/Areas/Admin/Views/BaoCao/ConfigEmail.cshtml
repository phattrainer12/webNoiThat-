@model IEnumerable<HTML_UMA.Models.InformationMail>

@{
    ViewBag.Title = "ConfigEmail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Config Email</h2>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromEmail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromEmail)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "EditEmail", new { id=item.ID })
        </td>
    </tr>
}
</table>
