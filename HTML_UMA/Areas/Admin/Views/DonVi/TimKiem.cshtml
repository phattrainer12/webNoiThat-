@model PagedList.IPagedList<HTML_UMA.Models.OptionSale>
@using PagedList.Mvc

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="text-center">
    <h2>Đơn vị</h2>
</div>

<p>
    <a href="@Url.Action("Create")"><button>Tạo mới</button></a>
</p>
<table class="table">
    <tr>
        <th>
            Tên đơn vị
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.OptionID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.OptionID })
            </td>
        </tr>
    }

</table>
    @Html.PagedListPager(Model, page => Url.Action("TimKiem",
   new { search = ViewBag.search, page }))
</div>


