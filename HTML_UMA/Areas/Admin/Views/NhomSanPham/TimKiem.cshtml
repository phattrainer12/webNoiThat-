@model PagedList.IPagedList<HTML_UMA.Models.GroupProduct>
@using PagedList.Mvc

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="text-center">
    <h2>Nhóm Sản phẩm</h2>
</div>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Mô tả
        </th>
        <th colspan="3"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.group_Name)
            </td>
            <td>
                <img src="@item.image" width="60" height="60" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.group_ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.group_ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.group_ID })
            </td>
        </tr>
    }
    </table>
    <div class="text-center">
        @Html.PagedListPager(Model, page => Url.Action("TimKiem",
   new { search = ViewBag.search, page }))
    </div>


