@model IEnumerable<HTML_UMA.Models.OrderDetail>
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="main row">
        <div class="col-left sidebar uma-lg-2 col-md-3 col-sm-4 col-xs-12">
            <div class="block block-account">
                <div class="block-title">
                    <strong><span>Quản lý tài khoản</span></strong>
                </div>
                <div class="block-content">
                    <ul>
                        <li class="current"><strong>Thông tin chung</strong></li>
                        <li><a href="@Url.Action("EditUser","Account")">Thông tin tài khoản</a></li>
                        <li><a href="/Account/Order">Đơn hàng của tôi</a></li>
                        <li><a href="/Account/listFavourist">Danh sách yêu thích</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-main uma-lg-8 col-md-9 col-sm-8 col-xs-12">
            <div class="my-account">
                <div class="my-orders">
                    <div class="page-title">
                        <h3>Đơn hàng của tôi</h3>
                    </div>
                    <div class="box-info table-responsive">
                        <table class="table table-striped table-condensed data-table" id="my-orders-table">
                            <thead>
                                <tr class="first last">
                                    <th>Mã đơn hàng </th>
                                    <th>Ngày</th>
                                    <th>Chuyển hàng cho</th>
                                    <th><span class="nobr">Tổng tiền</span></th>
                                    <th><span class="nobr">Tình trạng đơn hàng</span></th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                                @if (Model.Count() != 0)
                                {
                                    
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr class="first last odd">
                                            <td>@item.detail_ID</td>
                                            <td><span class="nobr">Date</span></td>
                                            <td>@item.detail_ShipName</td>
                                            <td><span class="price">@Html.Raw(string.Format("{0:#,#}", item.detail_Totalmoney))</span><span>VNĐ</span></td>
                                            <td>
                                                @if (item.@checked == true)
                                                {
                                                    <em>Đã kiểm tra</em>
                                                }
                                                else
                                                {
                                                    <em>Đang kiểm tra</em>
                                                }
                                            </td>
                                            <td class="a-center last">
                                                <span class="nobr">
                                                    <a href="@Url.Action("yourPayment","Account", new { detail_ID = item.detail_ID })">Xem đơn hàng</a>
                                                </span>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                }
                                else
                                {
                                    <tbody>
                                        <tr>
                                            <td colspan="5">
                                                Bạn chưa có đơn hàng nào!
                                            </td>
                                        </tr>
                                    </tbody>
                                        
                                 }
                        </table>
                        <script type="text/javascript">decorateTable('my-orders-table');</script>
                    </div>
                </div>
            </div>
        </div>

        </div>
</div>