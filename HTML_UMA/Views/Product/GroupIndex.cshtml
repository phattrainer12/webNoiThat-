@model IEnumerable<HTML_UMA.Models.GroupProduct>
@{
    Layout = null;
}
<div class="slider">
    <h3 class="page-title text-center">Bộ sưu tập</h3>
    <div class="magestore-bannerslider">
        <div class="magestore-bannerslider-standard">
            <div class="container happy-furniture-to-you" data-slider-id="2">
                <div class="items">
                    <div class="row clearfix">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6 wrapper" style="padding-bottom: 20px;">
                                <div class="item-image">
                                    <div class="" style="position: absolute;width:100%;top: 30%;left: 50%; transform:translateX(-50%) translateY(0)">
                                        <div class="text-center">
                                            <a href="@Url.Action("BoSuuTapSanPham","SanPham", new { IDBoSuuTap = item.group_ID})">
                                                <button class="btn" style="  padding: 5px 20px 10px;background-color: #4e7218;color: #fff;">Xem ngay</button>
                                            </a>
                                        </div>
                                    </div>
                                    <a href="@Url.Action("BoSuuTapSanPham","SanPham", new {IDBoSuuTap = item.group_ID })" target="_self">
                                        <img alt="" src="@item.image" height="200" width="100%" />
                                    </a>
                                </div>
                                <div class="text-center">
                                    <h3>@item.group_Name</h3>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('.imgInterior:first-child').removeClass('col-lg-6 col-md-6');
    $('.imgInterior:first-child').addClass('col-lg-12 col-md-12');
</script>

