@model HTML_UMA.Models.Product
@{
    ViewBag.Title = "ProductDetail";
    var moreimage = ViewBag.moreImage as List<HTML_UMA.Models.LinkImage>;
}
<div class="main-container col1-layout">
    <div class="breadcrumbs">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcrumb-wrapper">
                        <ul class="breadcrumb">
                            <li class="home">
                                <a href="/" title="Quay lại trang chủ">
                                    <span class="fa fa-home"></span>
                                </a>
                            </li>
                            <li class="product">
                                <a href="/SanPham/DanhMuc">Product</a>
                            </li>
                            <li class="product">
                                <span>@Model.pro_Name</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-top">
    </div>
    <div class="container">
        <div class="main row">
            <div class="col-main col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div id="messages_product_view"></div>
                <div class="product-view">
                    <div class="product-essential">
                        <form action="" method="post" id="product_addtocart_form">
                            <input name="form_key" type="hidden" value="vgcNE9ZXqptZqF1v">
                            <input type="hidden" name="product" value="1027">
                            <input type="hidden" name="related_product" id="related-products-field" value="">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 images">
                                    <div class="images-slider">
                                        <div class="slider slider-for easyzoom easyzoom--overlay slick-initialized slick-slider">
                                            <div aria-live="polite" class="slick-list draggable">
                                                <div class="slick-track" style="opacity: 1; width: 570px;" role="listbox">
                                                    <a href="" onclick="return false" class="slick-slide slick-current slick-active lager-image" data-slick-index="0" aria-hidden="false" style="width: 570px; position: relative; left: 0px; top: 0px; z-index: 999; opacity: 1;" tabindex="-1" role="option" aria-describedby="slick-slide00">
                                                        <img class="lagerimageShow" src="@Model.pro_Image" width="100%" height="100%">
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="slider slider-nav slick-initialized slick-slider">
                                        <div aria-live="polite" class="slick-list draggable">
                                            <div class="slick-track" style="opacity: 1; width: 100%; transform: translate3d(0px, 0px, 0px);" role="listbox">
                                                @foreach (var item in moreimage)
                                                {
                                                    <a data-id="@item.imgSmall_ID" class="slick-slide slick-active small-image"  data-slick-index="0" aria-hidden="false" style="width: 80px; height:80px;" tabindex="-1" role="option" aria-describedby="slick-slide10">
                                                        <img src="@item.link_ImageSmall" data-image-lager="@item.link_ImageLager" width="100%" height="100%">
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <script>
                                        $(function clickImage() {
                                                var $listimagesmall = $('.small-image');
                                                $('.small-image').click(function () {
                                                    var check = $(this).data('id');
                                                    $listimagesmall.each(function (index, e) {
                                                        var $id = $(this).data('id');
                                                        if ($id == check) {
                                                            var Imagelager = $(this).find('img').data('image-lager');
                                                            $('.lager-image').find('.lagerimageShow').prop('src', Imagelager);
                                                        }
                                                    });
                                                });
                                        });
                                    </script>
                                </div>
                                @if (Model.pro_Status == true)
                                {
                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 info">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-6 col-xs-6 basic">
                                                <div class="product-function">@Model.pro_Name</div>
                                                <div class="product-name text-uppercase"><strong>@Model.pro_Description</strong></div>
                                                <!-- Stock availability -->
                                                <div class="stock-availability-info">
                                                    <div class="status-label in-stock" data-status="@Model.pro_Status">
                                                        <span id="product-status">Còn Hàng</span>
                                                    </div>
                                                </div>
                                                <div class="social-media-buttons">
                                                    <span class="text text-uppercase">Chia sẻ trên</span>
                                                    <span class="buttons">
                                                        <a onclick="return product_social_sharing(event)" target="_blank" title="Facebook" href="//www.facebook.com/sharer.php?u=https://uma.vn/vi/saxon-2148.html" class="btn btn-facebook">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/facebook.svg" width="24px" height="24px">
                                                        </a>
                                                        <a onclick="return product_social_sharing(event)" target="_blank" title="Twiter" href="//twitter.com/share?url=https://uma.vn/vi/saxon-2148.html" class="btn btn-twitter">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/twitter.svg" width="24px" height="24px">
                                                        </a>
                                                        <a onclick="return product_social_sharing(event)" target="_blank" title="Google+" href="//plus.google.com/share?url=https://uma.vn/vi/saxon-2148.html" class="btn btn-google-plus">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/google-plus.svg" width="24px" height="24px">
                                                        </a>
                                                        <a data-pin-do="buttonPin" data-pin-custom="true" class="btn btn-pin" title="Pin on Pinterest" data-pin-log="button_pinit" data-pin-href="https://www.pinterest.com/pin/create/button?guid=VzS8tc4db6C1-1&amp;url=https%3A%2F%2Fuma.vn%2Fvi%2Fsaxon-2148.html&amp;media=https%3A%2F%2Fuma.vn%2Fmedia%2Fcatalog%2Fproduct%2Fcache%2F2%2Fthumbnail%2F9df78eab33525d08d6e5fb8d27136e95%2FS%2FA%2FSAXON_SAXON_0000000002548_SMALL_STORAGE_-_Boxes_Crates_and_Baskets_3176_20161122073635853570.jpg&amp;description=with%20handle">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/pinterest.svg" width="24px" height="24px">
                                                        </a>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-sm-6 col-xs-6 price-box">
                                                <div class="price-info group">
                                                    <div class="price-box">
                                                        <span class="regular-price" >
                                                            <span class="price">@Html.Raw(string.Format("{0:#,#}", Model.pro_price))</span><span>VNĐ</span>
                                                        </span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div>
                                            <div class="add-to-box">
                                                <div class="buttons-wrapper">
                                                    <div class="button btn-wishlist">
                                                        <a href="">Yêu thích</a>
                                                    </div>
                                                    <div class="button btn-cart">
                                                        <a href="@Url.Action("addCart","Product", new { pro_ID = Model.pro_ID})">Mua hàng</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- description-->
                                            <div class="description">
                                                @Model.pro_Instruction
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 info">
                                        <div class="row">
                                            <div class="col-md-12 col-sm-6 col-xs-6 basic">
                                                <div class="product-function">@Model.pro_Name</div>
                                                <div class="product-name text-uppercase"><strong>@Model.pro_Description</strong></div>
                                                <!-- Stock availability -->
                                                <div class="stock-availability-info">
                                                    <div class="status-label in-stock" data-status="@Model.pro_Status">
                                                        <span id="product-status">Tạm hết hàng</span>
                                                    </div>
                                                </div>
                                                <div class="social-media-buttons">
                                                    <span class="text text-uppercase">Chia sẻ trên</span>
                                                    <span class="buttons">
                                                        <a onclick="return product_social_sharing(event)" target="_blank" title="Facebook" href="" class="btn btn-facebook">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/facebook.svg" width="24px" height="24px">
                                                        </a>
                                                        <a onclick="return product_social_sharing(event)" target="_blank" title="Twiter" href="" class="btn btn-twitter">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/twitter.svg" width="24px" height="24px">
                                                        </a>
                                                        <a onclick="return product_social_sharing(event)" target="_blank" title="Google+" href="" class="btn btn-google-plus">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/google-plus.svg" width="24px" height="24px">
                                                        </a>
                                                        <a data-pin-do="buttonPin" data-pin-custom="true" class="btn btn-pin" title="Pin on Pinterest" data-pin-log="button_pinit" data-pin-href="">
                                                            <img src="https://uma.vn/skin/frontend/uma/default/images/icons/socials/product/pinterest.svg" width="24px" height="24px">
                                                        </a>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-md-12 col-sm-6 col-xs-6 price-box">
                                                <div class="price-info group">
                                                    <div class="price-box">
                                                        <span class="regular-price">
                                                            <span class="price">@Html.Raw(string.Format("{0:#,#}", Model.pro_price))</span><span>VNĐ</span>
                                                        </span>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div>
                                            <div class="add-to-box">

                                                <div class="buttons-wrapper">
                                                    <div class="button btn-wishlist">
                                                        <a href="">Yêu thích</a>
                                                    </div>
                                                    <div class="button btn-cart" style="background: #888;">
                                                        <a>Tạm hết hàng</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- description-->
                                            <div class="description">
                                                @Model.pro_Instruction
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </form>

                        <div class="product-details">
                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-12 box description">
                                    <h4 class="title">
                                        <strong class="text">Đặc điểm sản phẩm</strong>
                                        <span class="line"></span>
                                    </h4>
                                    <div class="content">
                                        <table width="100%">
                                            <tbody>
                                                <tr>
                                                    <td>Chất Liệu</td>
                                                    <td>@Model.pro_Materials</td>
                                                </tr>
                                                <tr>
                                                    <td>Màu sắc</td>
                                                    <td>@Model.Color.NameColor</td>
                                                </tr>
                                                <tr>
                                                    <td>Kích thước</td>
                                                    <td>@Model.pro_Size</td>
                                                </tr>
                                                <tr>
                                                    <td>Mã Sản Phẩm</td>
                                                    <td>@Model.pro_code</td>
                                                </tr>
                                                <tr>
                                                    <td>Thiết kế</td>
                                                    <td>@Model.pro_Designer</td>
                                                </tr>
                                                <tr>
                                                    <td>Xuất Xứ</td>
                                                    <td>@Model.pro_Source</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12 box good2know">
                                    <h4 class="title">
                                        <strong class="text">Hướng dẫn bảo quản</strong>
                                        <span class="line"></span>
                                    </h4>
                                    <div class="content">
                                        @Model.pro_Instruction
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-bottom">
    </div>
</div>