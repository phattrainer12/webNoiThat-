@model PagedList.IPagedList<HTML_UMA.Models.Contact>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="text-center">
    <h2>Liên Hệ</h2>
</div>
<div class="row">
    <div class="col-md-4 text-right">
        <form action="/Admin/Contacts/TimKiem">
            <div class="input-group">
                <input class="form-control ui-autocomplete-input" name="search" type="number" id="form-search" placeholder="Nhập mã đơn hàng" autocomplete="off"><span role="status" aria-live="polite" class="ui-helper-hidden-accessible"></span>
                <span class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Nội dung:
        </th>
        <th colspan="2"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.contact_LastName) @Html.DisplayFor(modelItem => item.contact_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact_Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact_Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contact_Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.contactt_Content)
        </td>
        <td>
            @Html.ActionLink("Chi tiết", "Details", new { id=item.contact_ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.contact_ID })
        </td>
    </tr>
}

</table>
<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index",
   new { page }))
</div>