@model PagedList.IPagedList<HTML_UMA.Models.Color>
@using PagedList.Mvc

@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="text-center">
    <h2>Danh mục</h2>
</div>
<div class="text-center">
    <h2>Màu sắc</h2>
</div>

<table class="table">
    <tr>
        <th>
            Màu sắc
        </th>
        <th>
            Mã màu
        </th>
        <th>
            Chức Năng
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Color_ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Color_ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Color_ID })
            </td>
        </tr>
    }

</table>
<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("TimKiem",
   new { search = ViewBag.search, page }))
</div>


