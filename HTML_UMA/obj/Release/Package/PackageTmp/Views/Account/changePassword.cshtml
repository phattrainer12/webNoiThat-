
@{
    ViewBag.Title = "changePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserAccount = Session["User"] as HTML_UMA.Models.User;
}
<div class="main-container col1-layout">
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcrumb-wrapper">
                        <ul class="breadcrumb">
                            <li class="Home">
                                <a href="/Acount/UserInformation" title="User">
                                    User
                                </a>
                            </li>
                            <li class="Sign up">
                                <a>Đổi mật khẩu</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="main row">
            <div class="col-main col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="account-login">
                    <h2 class="page-title">Đổi mật khẩu</h2>
                    <div></div>
                    <div class="container-fluid account-panel">
                        <div class="row login-panel">
                            <div class="website col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="content" style="width: 50%; margin: auto;">
                                    <h4 class="text-left text-uppercase">Tài khoản @*@UserAccount.user_Name*@</h4>
                                    <form action="@Url.Action("changePassword","Account")" method="post">
                                        <div class="form-input">
                                            <div>
                                                <div class="form-group">
                                                    <label for="email" class="required hidden">Mật khẩu cũ</label>
                                                    <input type="password" name="oldPass" id="oldPass" value="" class="form-control" placeholder="Nhập mật khẩu cũ..." title="Mật khẩu cũ">
                                                </div>
                                                <div class="form-group">
                                                    <label for="pass" class="required hidden">Mật khẩu mới</label>
                                                    <input type="password" name="newPass" id="newPass" class="form-control" placeholder="Nhập mật khẩu mới" title="mật khẩu mới">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="buttons col-lg-4 col-md-4 col-sm-12 col-xs-12 hidden-sm hidden-xs text-left">
                                                    <button type="submit" class="button btn-login" title="Đăng nhập" name="send" id="send2">
                                                        <span class="text-uppercase">
                                                            <strong>Thay đổi</strong>
                                                        </span>
                                                    </button>
                                                </div>
                                                <div class="buttons col-lg-4 col-md-4 col-sm-12 col-xs-12 visible-sm visible-xs text-center">
                                                    <button type="submit" class="button btn-login" title="Đổi mật khẩu" name="send">
                                                        <span class="text-uppercase">
                                                            <strong>Thay đổi</strong>
                                                        </span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
